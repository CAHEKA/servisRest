{
  "swagger": "2.0",
  "info": {
    "title": "My Flask Service",
    "version": "1.0",
    "description": "API Documentation for My Flask Service"
  },
  "basePath": "/",
  "tags": [
    {
      "name": "User",
      "description": "User registration and login"
    },
    {
      "name": "Product",
      "description": "Product related operations"
    },
    {
      "name": "Cart",
      "description": "Shopping Cart operations"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["User"],
        "summary": "Register a new user",
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "User already exists"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["User"],
        "summary": "Login user",
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Product"],
        "summary": "Get a list of products",
        "responses": {
          "200": {
            "description": "List of products",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number",
                    "format": "float"
                  },
                  "discount": {
                    "type": "number",
                    "format": "float"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{product_id}": {
      "get": {
        "tags": ["Product"],
        "summary": "Get details of a specific product",
        "parameters": [
          {
            "name": "product_id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Details of the product",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "price": {
                  "type": "number",
                  "format": "float"
                },
                "discount": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/cart": {
      "get": {
        "tags": ["Cart"],
        "summary": "Get the contents of the shopping cart",
        "responses": {
          "200": {
            "description": "Shopping cart contents",
            "schema": {
              "type": "object",
              "properties": {
                "cart": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "category": {
                        "type": "string"
                      },
                      "price": {
                        "type": "number",
                        "format": "float"
                      },
                      "discount": {
                        "type": "number",
                        "format": "float"
                      },
                      "quantity": {
                        "type": "integer"
                      }
                    }
                  }
                },
                "total_price": {
                  "type": "number",
                  "format": "float"
                },
                "total_discount": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "post": {
        "tags": ["Cart"],
        "summary": "Add a product to the shopping cart",
        "parameters": [
          {
            "name": "product_id",
            "in": "formData",
            "type": "integer",
            "required": true
          },
          {
            "name": "quantity",
            "in": "formData",
            "type": "integer"
          }
        ],
        "responses": {
          "201": {
            "description": "Product added to cart successfully"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/cart/{product_id}": {
      "delete": {
        "tags": ["Cart"],
        "summary": "Remove a product from the shopping cart",
        "parameters": [
          {
            "name": "product_id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Product removed from cart"
          },
          "404": {
            "description": "Product not found in cart"
          }
        }
      }
    }
  }
}
